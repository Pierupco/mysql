CREATE TABLE `USERS` (
  `ID` char(12) NOT NULL COMMENT 'prefix with UR + 10 left-padding-0 number''',
  `USERNAME` varchar(20) NOT NULL,
  `STATUS_BIT` bit(8) NOT NULL DEFAULT b'11' COMMENT 'email verified | phone verified | unlocked | active',
  `FIRST_NAME` varchar(64) NOT NULL,
  `LAST_NAME` varchar(64) NOT NULL,
  `PASSWORD` varchar(64) NOT NULL,
  `PRIMARY_EMAIL` varchar(128) NOT NULL,
  `PRIMARY_PHONE` varchar(20) NOT NULL,
  `CREATED_ON` datetime NOT NULL,
  `LAST_UPDATED` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  `LAST_LOGON` datetime DEFAULT NULL,
  `IMAGE_URL` varchar(128) DEFAULT NULL,
  `IBEACON_VISIBILITY` tinyint(4) NOT NULL DEFAULT '1' COMMENT '0 - private\n1 - public (visible to all pier user)',
  `COUNTRY_CODE` char(2) NOT NULL,
  PRIMARY KEY (`ID`),
  UNIQUE KEY `UX_USER_NAME` (`USERNAME`),
  KEY `IX_EMAIL` (`PRIMARY_EMAIL`),
  KEY `IX_Phone` (`PRIMARY_PHONE`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
