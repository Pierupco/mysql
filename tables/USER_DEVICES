CREATE TABLE `USER_DEVICES` (
  `DEVICE_ID` char(12) NOT NULL COMMENT 'Prefix DV',
  `USER_ID` char(12) NOT NULL,
  `DEVICE_TOKEN` varchar(45) NOT NULL,
  `LAST_UPDATED` timestamp NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  `USER_DEVICEScol1` varchar(45) DEFAULT NULL,
  `DATE_ACTIVATED` datetime DEFAULT NULL,
  `STATUS_BIT` bit(8) DEFAULT b'1' COMMENT 'activated | deactivated | added',
  `USER_AGENT_RAW` varchar(128) DEFAULT NULL,
  `PHONE_NUMBER` varchar(20) DEFAULT NULL COMMENT 'phone # associated with the device',
  `OS` varchar(20) DEFAULT NULL COMMENT 'such as iOS, Android, Windows, Blackberry',
  PRIMARY KEY (`DEVICE_ID`),
  KEY `USER_DEVICES_ibfk_1` (`USER_ID`),
  CONSTRAINT `USER_DEVICES_ibfk_1` FOREIGN KEY (`USER_ID`) REFERENCES `USERS` (`ID`) ON DELETE CASCADE ON UPDATE NO ACTION
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
